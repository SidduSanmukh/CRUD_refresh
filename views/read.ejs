<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="../styles/index.css">
  </head>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-800 p-10 text-white">
      <a href="/" class="text-1xl text-blue-400 underline"> <-- Create User</a>
      <h1 class="text-3xl tracking-tighter mb-3">All users</h1>
      <% if(users.length > 0) { %>
         <div class="users flex flex-wrap gap-4">
            <% users.forEach((user)=>{ %>
              <div class="user w-74 p-4 bg-zinc-600 rounded-lg">
                <div class="image w-full h-52 rounded-lg bg-zinc-400 overflow-hidden">
                  <img src="<%= user.image_url %>" class="w-full h-full object-cover" alt="">
                </div>
                <h3 class="username text-xl mt-5 tracking-tighter"><%= user.name  %></h3>  
                <h3 class="email text-zinc-300 tracking-tighter mb-6"><%= user.email %></h3>
                <a href="/update/<%= user._id %>" class="text-yellow-500 mr-20">Update user</a>  
                <a href="/delete/<%= user._id  %>" class="text-red-500">Delete user</a>  
            </div>
            <% }) %>
         </div>
        <% } else { %> 
          <p class="text-zinc-400">No users</p>
          <% } %>
    </div>
  </body>
</html>
